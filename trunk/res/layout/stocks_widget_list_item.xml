	    <TextView android:textColor="#FFF" android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_alignTop="@+id/stateImage" android:id="@+id/quoteChangePercent" android:text="+0.23%" android:layout_centerInParent="true" android:layout_marginTop="2dip"></TextView>
    </RelativeLayout>
</RelativeLayout>