<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.paulish.widgets.stocks"
      android:versionCode="3"
      android:versionName="0.3.0">
    <application android:icon="@drawable/stocks" android:label="@string/app_name">
   		<provider
   		  android:name=".DataProvider"
            android:authorities="com.paulish.widgets.stocks.provider"
            android:multiprocess="true"
            android:grantUriPermissions="true"
            />
		<!-- Broadcast Receiver that will process AppWidget updates -->
						
		<receiver android:name=".StocksWidget" android:label="@string/app_name">
			<intent-filter>
				<action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
			</intent-filter>
			<meta-data android:name="android.appwidget.provider" android:resource="@xml/stocks_widget_provider" />
		</receiver>		
		
		<activity android:name=".ConfigurationActivity">
			<intent-filter>
				<action android:name="com.paulish.widgets.stocks.PREFS" />
			</intent-filter>
		</activity>

		<activity android:name=".QuoteViewActivity">
			<intent-filter>
				<action android:name="com.paulish.widgets.stocks.QUOTE_VIEW" />
			</intent-filter>
		</activity>
		
    </application>
    <uses-sdk android:minSdkVersion="7" />

	<uses-permission android:name="android.permission.INTERNET"></uses-permission>
</manifest> 